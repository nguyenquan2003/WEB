
<!DOCTYPE html>
@using DoAnCuoiKi.Models
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row" style="background-color:darkred">
            <div class="col-2"></div>
            <div class="col-8">
                <nav class="navbar navbar-expand-lg bg-body-tertiary">
                    <img src="/HinhAnh/logo.jpg" style="width:100px" />
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <h1 style="color:white;">TRANG QUẢN LÝ</h1>
                                </li>
                                @{
                                   if (Session["admin"] != null)
                                {
                                       QuanLy s = Session["admin"] as QuanLy;
                                    <li class="nav-item">
                                        <p style="color:white">xin chào @s.TaiKhoan</p>
                                    </li>
                                }
                                }
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
            <div class="col-2"></div>
        </div>
        <div class="row">
            <div style="background-color:darkred;height:500px" class="col-2">
                <div id="list-example" class="list-group">
                    <a class="list-group-item list-group-item-action" href="/Admin/DMSanPham">Quản lý sản phẩm</a>
                    <a class="list-group-item list-group-item-action" href="/Admin/DMKhachHang">Quản lý khách hàng</a>
                    <a class="list-group-item list-group-item-action" href="/Admin/DMDonHang">Quản lý đơn hàng</a>
                    <a class="list-group-item list-group-item-action" href="/Admin/DMLoai">Quản lý loại hàng</a>
                    <a class="list-group-item list-group-item-action" href="/KhachHang/Index">Giao diện bán hàng</a>
                </div>
            </div>
            <div class="col-10">
                @RenderBody()
            </div>
        </div>

    </div>
</body>
</html>