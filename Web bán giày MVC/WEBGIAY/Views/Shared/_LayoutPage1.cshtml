    <link rel="stylesheet" href="~/Asset/css/TrangChu.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />

    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css">

    <link rel="stylesheet" type="text/css" href="~/Asset/css/style.css">

    <link rel="stylesheet" href="~/Scripts/jquery-3.7.1.js">
    <link rel="stylesheet" href="~/Scripts/jquery.validate.unobtrusive.min.js">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css"
          media="screen">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link href="~/Asset/css/product.css" rel="stylesheet" />

    <style>
        .row {
            display: flex;
            justify-content: space-between;
        }

        .col-md-0 {
            flex: 1;
            color: red;
        }

            .col-md-0 > a {
                text-decoration: none;
                margin-right: 10px;
            }

        .menu_up {
            min-height: 50px;
            margin-top: 0px;
            margin-bottom: 20px;
            background-color: black;
            text-align: center;
            font-size: 20px;
            color: #fff;
            font-family: NunitoSanRegular;
            text-decoration: none;
            display: inline-block;
        }

            .menu_up ul {
                list-style: none;
                margin-top: 0px;
            }

                .menu_up ul li {
                    float: right;
                }

                    .menu_up ul li a {
                        color: #fff;
                        line-height: 10px;
                        text-decoration: none;
                        font-size: 22px;
                        display: block;
                    }

                        .menu_up ul li a img {
                            vertical-align: middle;
                        }

                        .menu_up ul li a:hover {
                            font-weight: bold;
                            color: #F90;
                        }
    </style>
</head>

<body>
    @{ var u = Session["use"] as WEBGIAY.Models.nguoiDung; }
    <div>
        <div class="container-fluid menu_up ">
            <div class="row p-2">
                <div class="col-2" style="margin-left: 25px; text-align: center">

                    @Html.Action("GioHangPartial", "GioHang", new { @class = "giohang" })
                </div>
                @{ if (u != null)
                    {
                        <div class="col-6">
                            <div class="row">
                                <div class="col-6">
                                    <a style="color:#ffd800" href="@Url.Action("Profile", "User", new { id = u.maNguoiDung  })"> Xin chào : @u.tenNguoiDung</a>
                                </div>
                                <div class="col">
                                    <i class="fa-solid fa-right-from-bracket"></i>
                                    <a style="color: red;" href="/User/DangXuat"> ĐĂNG XUẤT</a>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-6">
                            <i class="fa-solid fa-user-plus"></i>
                            <a style="color:white;" href="/User/Dangky"> Đăng ký</a>
                            &nbsp;
                            <i class="fa-solid fa-right-to-bracket"></i>
                            <a style="color: white;" href="/User/Dangnhap"> Đăng nhập</a>
                        </div>
                    }
                }
            </div>
        </div>
        <div style="clear: both"></div>
        <!------------------- menu lớn ------------------->
        <div class="menu_down">
            <ul>
                <li class="logo">
                    <a href="/Home/Index">
                        <img src="/Image/Image_header1/Logo_Ananas_Header.svg" />
                    </a>
                </li>
                <li><a href="/SanPhams/Index">SẢN PHẨM</a></li>
                <li><a href="/SanPhams/Index">NAM</a></li>
                <li><a href="/SanPhams/Index">NỮ</a></li>
                <li><a href="/SanPhams/Index">SALE OFF</a></li>
                <li>
                    <a href="/SanPhams/Index">
                        <img src="/Image/Image_header1/DiscoverYOU.svg" />
                    </a>
                </li>
                <li>
                    <div class="mx-5">
                        <form class="form-search" action="/SanPhams/Index" style="width:350px;margin-left:70px;padding-top:5px">
                            <div style="display: flex;">
                                <input type="search" class="form-control rounded" id="search" name="search" value="@ViewBag.Search"
                                       placeholder="Search"
                                       aria-label="Search" aria-describedby="search-addon" />
                                <button type="submit" class="btn"><span class="glyphicon glyphicon-search"><i class="fa fa-search" aria-hidden="true"></i></span></button>
                            </div>
                        </form>
                    </div>
                </li>
            </ul>
        </div>
    </div>


    <div style="clear: both"></div>

    <!------------------- ảnh bìa ------------------->
    <div style="clear: both"></div>
    <div class="row">
        <div class="col">
            <div class="hot-new">
                <div id="carouselExampleform-control" class="carousel w-50 mx-auto" data-ride="carousel">
                    <a class="carousel-control-next" href="#carouselExampleform-control" role="button" data-slide="next">
                        <span class="carousel-control-next-icon"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <p>BUY 2 GET 10% OFF - ÁP DỤNG VỚI TẤT CẢ BASIC TEE</p>
                        </div>
                        <div class="carousel-item">
                            <p>FREE SHIPPING VỚI HOÁ ĐƠN TỪ 800K !</p>
                        </div>
                        <div class="carousel-item">
                            <p>HÀNG 2 TUẦN NHẬN ĐỔI - GIÀY NỬA NĂM BẢO HÀNH</p>
                        </div>
                        <div class="carousel-item">
                            <p>BUY MORE PAY LESS - ÁP DỤNG KHI MUA PHỤ KIỆN</p>
                        </div>
                    </div>

                    <a class="carousel-control-prev" href="#carouselExampleform-control" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!------------------- ảnh bìa ------------------->
    <div style="clear: both"></div>

    @RenderBody()

    <!-- Footer------------------------------------------------------------------------------------------------------------------------- -->

    <div style="clear: both"></div>
    <div class="footer container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="row">
                    <img style="margin-top: 40px; margin-left: 40px" class="card-img"
                         src="/Image/Image_footer/Store.svg" />
                </div>
                <div class="row">
                    <a class="tim-cua-hang" href="TrangChu.html">TÌM CỬA HÀNG</a>
                </div>
            </div>

            <div class="col-md-9">
                <div style="margin-bottom: 20px" class="row">
                    <div class="col-md-3 col-lg-3 col-sm-12 ds-footer">
                        <ul>
                            <li>
                                <a href="#">
                                    <h4 class="text-white">SẢN PHẨM</h4>
                                </a>
                            </li>
                        </ul>

                        <ul class="col-sm-4">
                            <li>
