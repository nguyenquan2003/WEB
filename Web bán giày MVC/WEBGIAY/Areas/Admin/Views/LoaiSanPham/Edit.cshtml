@model WEBGIAY.Models.loaiSanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2  class="card-header text-xl-center justify-content-xl-center">Chỉnh sửa</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="container form-horizontal  w-50">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.maLoaiSP)

        <div class="form-group">
            @Html.LabelFor(model => model.tenLoaiSP, "Tên loại sản phẩm" ,htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tenLoaiSP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tenLoaiSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-primary btn-lg" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success btn-lg" })
            </div>
        </div>
    </div>
}
