@model WEBGIAY.Models.sanPham

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm sản phẩm mới</h2>

@using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <div class="form-group">
        @Html.LabelFor(model => model.tenSanPham, "Tên sản phẩm", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.tenSanPham, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tenSanPham, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ngaySanXuat, "Ngày sản xuất", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ngaySanXuat, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ngaySanXuat, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.soLuongSanPham, "Số lượng sản phẩm", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.soLuongSanPham, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.soLuongSanPham, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.maLoaiSP, "Mã loại sản phẩm", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.maLoaiSP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.maLoaiSP, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.gia, "Giá bán", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.EditorFor(model => model.gia)
            @Html.ValidationMessageFor(model => model.gia, "", new { @class = "text-danger" })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.chuThichSanPham, "Chú thích", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.chuThichSanPham, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.chuThichSanPham, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="row my-2">
            <div class="col-2"></div>
            <div class="col-6">
                @Html.LabelFor(model => model.hinhAnh, "Ảnh sản phẩm")
                <input type="file" name="imageFiles[0]" class="form-control" />
                @Html.ValidationMessageFor(model => model.hinhAnh, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row my-2">
            <div class="col-2"></div>
            <div class="col-6">
                @Html.LabelFor(model => model.hinh1, "Ảnh chi tiết 1")
                <input type="file" name="imageFile[1]" id="imageFile1" class="form-control" />
                @Html.ValidationMessageFor(model => model.hinh1, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row my-2">
            <div class="col-2"></div>
            <div class="col-6">
                @Html.LabelFor(model => model.hinh2, "Ảnh chi tiết 2")
                <input type="file" name="imageFile[1]" id="imageFile2" class="form-control" />
                @Html.ValidationMessageFor(model => model.hinh2, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row my-2">
            <div class="col-2"></div>
            <div class="col-6">
                @Html.LabelFor(model => model.hinh3, "Ảnh chi tiết 3")
                <input type="file" name="imageFile[3]" id="imageFile3" class="form-control" />
                @Html.ValidationMessageFor(model => model.hinh3, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row my-2">
            <div class="col-2"></div>
            <div class="col-6">
                @Html.LabelFor(model => model.hinh4, "Ảnh chi tiết 4")
