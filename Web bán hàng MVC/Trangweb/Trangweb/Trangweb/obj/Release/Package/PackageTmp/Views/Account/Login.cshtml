@model Trangweb.ViewModel.LoginVM

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="g2">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {

        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(temp => temp.Username, "Tên đăng nhập")
                @Html.TextBoxFor(temp => temp.Username, new
                {
                    placeholder =
                "Tên đăng nhập",
                    @class = "form-control"
                })
                @Html.ValidationMessageFor(temp => temp.Username)
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(temp => temp.Password)
                @Html.PasswordFor(temp => temp.Password, new
                {
                    placeholder =
                "Password",
                    @class = "form-control"
                })
                @Html.ValidationMessageFor(temp => temp.Password)
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @Html.ValidationSummary()
            </div>
        </div>

        <button type="submit" class="btn btn-success">Đăng nhập</button>


    }

</div>