@model Trangweb.Models.Product
@{
    ViewBag.Title = "Create";
}

<h2 class="text-center">@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Product", new { area = "Admin" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row my-2">
        <div class="col-2"></div>
        <div class="col-6">
            @Html.LabelFor(model => model.Name, "Tên sản phẩm")
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row my-2">
        <div class="col-2"></div>
        <div class="col-6">
            @Html.LabelFor(model => model.MieuTa, "Mô tả sản phẩm")
            @Html.TextBoxFor(model => model.MieuTa, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MieuTa, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row my-2">
        <div class="col-2"></div>
        <div class="col-6">
            @Html.LabelFor(model => model.Price, "Giá sản phẩm")
            @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row my-2">
        <div class="col-2"></div>
        <div class="col-6">
            @Html.LabelFor(model => model.Image, "Ảnh sản phẩm")
            <input type="file" name="imageFile" id="imageFile" class="form-control" />
            @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row my-2">
        <div class="col-md-2"></div>
        <div class="col-md-6">
            @Html.LabelFor(model => model.Id_Category, "Danh mục sản phẩm")
            @Html.DropDownListFor(model => model.Id_Category, new SelectList(ViewBag.Loai, "Id_Category", "Name"),
            "Chọn loại sản phẩm", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Id_Category)
        </div>
    </div>
    <div class="row my-2">
        <div class="col-2"></div>
        <div class="col-6">
            <button type="submit" class="btn btn-primary">Thêm sản phẩm</button> &nbsp;
            <a href="/Admin/Product" class="btn btn-warning">Quay lại</a>
        </div>
    </div>

}
@section narbar {
    <div></div>
    <div class="c1">
        <i class="fa-solid fa-bars"></i>DANH MỤC SẢN PHẨM
    </div>
    @foreach (var item in ViewBag.Loai)
    {
        <div class="c3">
            <a href="/Admin/Category/Index/@item.Id_Category" style="color: white;">
                <img src="~/Image/@item.Image" style="width: 30px; height: auto;" />
                @item.Name
            </a>

        </div>
    }
}

@section SearchProductByName {
    <form action="Admin/Product/Index">
        <input class="b1" type="search" placeholder="Nhập tên sản phẩm" id="search" name="search"
               value="@ViewBag.Search" />
        <button style="height: 30px; width: 35px; margin-left: -5px;" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
        </button>
    </form>
}


