@model Khuong_buoi8.Models.Sach

@{
    ViewBag.Title = "ThemSachMoi";
    Layout = "~/Views/Shared/KhungTrangChinh.cshtml";
}

@using (Html.BeginForm("ThemSachMoi", "Home", FormMethod.Post, new { @enctype = "multipart/form-date"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Thêm Quyển Sách Mới</legend>

        <div class="editor-label">
            Tên Sách:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TenSach)
            @Html.ValidationMessageFor(model => model.TenSach)
        </div>

        <div class="editor-label">
            Giá Bán:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GiaBan)
            @Html.ValidationMessageFor(model => model.GiaBan)
        </div>

        <div class="editor-label">
            Mô Tả:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MoTa)
            @Html.ValidationMessageFor(model => model.MoTa)
        </div>

        <div class="editor-label">
            Ngày Cập Nhật:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NgayCapNhat)
            @Html.ValidationMessageFor(model => model.NgayCapNhat)
        </div>

        <div class="editor-label">
            Ảnh Bìa:
            <div>
                <input type="file" name=" fileupload" />
                @ViewBag.thongbao
            </div>
        </div>
        <div class="editor-field">
          
        </div>

        <div class="editor-label">
            Số Lượng Tồn:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SoLuongTon)
            @Html.ValidationMessageFor(model => model.SoLuongTon)
        </div>

        <div class="editor-label">
            Mã Chủ Đề:
        </div>
        <div class="editor-field">
            @Html.DropDownList("MaChuDe") 
        </div>

        <div class="editor-label">
            Nhà Xuất Bản:
        </div>
        <div class="editor-field">
            @Html.DropDownList("MaNXB") 
        </div>

        <div class="editor-label">
            Mới:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Moi)
            @Html.ValidationMessageFor(model => model.Moi)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
