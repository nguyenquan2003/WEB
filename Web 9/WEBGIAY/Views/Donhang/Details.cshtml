@model IEnumerable<WEBGIAY.Models.chiTietDonHang>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container-fluid w-100 text-xl-center" style="font-size:35px;color:red; font-weight: bold;">CHI TIẾT ĐƠN HÀNG</div>

<div class="container-md mx-auto" style="min-height:400px;">
    <table class="table">
        <tr>
            <th>
                Sản phẩm
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Đơn giá / 1 sản phẩm
            </th>
            <th>
                Thành tiền
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.sanPham.tenSanPham)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.soLuong)
                </td>
                <td>
                    @String.Format("{0:0,0}", item.donGia) VNĐ
                </td>
                <td>
                    @String.Format("{0:0,0}", item.thanhTien) VNĐ
                </td>
            </tr>
        }

    </table>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-warning align-content-xxl-start" href="/SanPhams/Index">TIẾP TỤC MUA HÀNG</a>
    </div>
</div>

