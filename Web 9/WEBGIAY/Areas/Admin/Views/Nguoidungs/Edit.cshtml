            @Html.EditorFor(model => model.tenNguoiDung, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tenNguoiDung, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
