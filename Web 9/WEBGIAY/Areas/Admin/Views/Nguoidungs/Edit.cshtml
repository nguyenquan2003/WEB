@model WEBGIAY.Models.nguoiDung

@{ ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml"; }


<h2 class="card-header text-xl-center justify-content-xl-center">Chỉnh sửa thông tin người dùng</h2>

