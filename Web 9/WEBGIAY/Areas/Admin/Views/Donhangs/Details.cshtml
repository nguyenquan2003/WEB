@model WEBGIAY.Models.donHang

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="card-header text-xl-center justify-content-xl-center">Chi tiết đơn hàng</h2>

<div class="container-md w-50">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên người dùng:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.nguoiDung.tenNguoiDung)
        </dd>


        <dt>
            Tồng tiền
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tongTien)
        </dd>


        <dt>
            Ngày đặt
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ngayDat)
        </dd>

        <dt>
            Tình trạng đơn hàng:
        </dt>
        <dd>
            @{
                if (Model.tinhTrang == 0)
                {
                    <div style="color:red">Đang chờ xác nhận</div>
                }
                else if (Model.tinhTrang == 1)
                {
                    <div style="color:slateblue">Đã xác nhận</div>
                }
                else
                {
                    <div style="color:red">Đang chờ xác nhận</div>
                }
            }
        </dd>

        <dt>
            Hình thức thanh toán:
        </dt>

        <dd>
            @{
                if (Model.thanhToan == 1)
                {
                    <div style="color:red">Thanh toán tiền mặt</div>
                }
                else if (Model.thanhToan == 2)
                {
                    <div style="color:slateblue">Thanh toán chuyển khoản</div>

                }
            }
        </dd>

        <dt>
            Địa chỉ nhận hàng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.diaChiNhanHang)
        </dd>

    </dl>
    <div>
        @Html.Action("xemThongTinDonHang", "Donhangs")
    </div>
    @Html.ActionLink("Xác nhận đơn hàng", "Xacnhan", new { id = Model.maDon }, new { @class = "btn btn-success btn-lg text-xl-center" })
</div>

   

